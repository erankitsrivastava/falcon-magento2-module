<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/info" method="GET">
        <service class="Hatimeria\Reagento\Api\InfoInterface" method="getInfo"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/url" method="GET">
        <service class="Hatimeria\Reagento\Api\UrlInterface" method="getUrl"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/menu" method="GET">
        <service class="Hatimeria\Reagento\Api\MenuRepositoryInterface" method="getTree"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/categories/homepage" method="GET">
        <service class="Hatimeria\Reagento\Api\HomeCategoriesInterface" method="getHomepageList"/>
        <resources>
            <resource ref="Magento_Catalog::categories"/>
        </resources>
    </route>
    <route url="/V1/categories/:categoryId/breadcrumbs" method="GET">
        <service class="Hatimeria\Reagento\Api\CategoryBreadcrumbsInterface" method="getList"/>
        <resources>
            <resource ref="Magento_Catalog::categories" />
        </resources>
    </route>
    <route url="/V1/categories" method="GET">
        <service class="Hatimeria\Reagento\Api\CategoryManagementInterface" method="getTree" />
        <resources>
            <resource ref="Magento_Catalog::categories" />
        </resources>
    </route>
    <route url="/V1/products" method="GET">
        <service class="Hatimeria\Reagento\Api\ProductRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Magento_Catalog::products" />
        </resources>
    </route>
    <route url="/V1/guest-carts/:cartId/paypal-fetch-token" method="GET">
        <service class="Hatimeria\Reagento\Api\Payment\PaypalInterface" method="getToken"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/contact" method="POST">
        <service class="Hatimeria\Reagento\Api\ContactFormInterface" method="send"/>
        <resources>
            <resource ref="Magento_Contact::contact" />
        </resources>
    </route>
    <route url="/V1/order-info/:quoteId" method="GET">
        <service class="Hatimeria\Reagento\Api\QuoteMaskInterface" method="getItem" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/guest-payment/:cartId/:orderId/adyen-link" method="GET">
        <service class="Hatimeria\Reagento\Api\Payment\AdyenLinkInterface" method="getGuestOrderPaymentLink"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/customer-payment/:customerId/:orderId/adyen-link" method="GET">
        <service class="Hatimeria\Reagento\Api\Payment\AdyenLinkInterface" method="getCustomerOrderPaymentLink"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/guest-carts/:cartId/reagento-order" method="PUT">
        <service class="\Hatimeria\Reagento\Api\HatimeriaGuestCartManagementInterface" method="placeOrder"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/guest-carts/:cartId/payment-information" method="POST">
        <service class="\Hatimeria\Reagento\Api\HatimeriaGuestPaymentInformationManagementInterface" method="savePaymentInformationAndPlaceOrder"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/carts/mine/reagento-order" method="PUT">
        <service class="\Hatimeria\Reagento\Api\HatimeriaCartManagementInterface" method="placeOrder"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route url="/V1/carts/mine/payment-information" method="POST">
        <service class="\Hatimeria\Reagento\Api\HatimeriaPaymentInformationManagementInterface" method="savePaymentInformationAndPlaceOrder"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <route url="/V1/guest-orders/:orderId/order-info" method="GET">
        <service class="\Hatimeria\Reagento\Api\HatimeriaGuestOrderManagementInterface" method="getItem"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/orders/:orderId/order-info" method="GET">
        <service class="\Hatimeria\Reagento\Api\HatimeriaOrderManagementInterface" method="getItem"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>

    <route url="/V1/orders/mine" method="GET">
        <service class="\Hatimeria\Reagento\Api\HatimeriaOrderManagementInterface" method="getCustomerOrders"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>

    <route url="/V1/adyen/config" method="GET">
        <service class="\Hatimeria\Reagento\Api\HatimeriaAdyenConfigInterface" method="getConfig"/>
        <resources>
            <resource ref="Magento_Config::system_config" />
        </resources>
    </route>

    <route url="/V1/customers/password/reset" method="PUT">
        <service class="Magento\Customer\Api\AccountManagementInterface" method="resetPassword"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
