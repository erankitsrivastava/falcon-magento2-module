<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/info" method="GET">
        <service class="Hatimeria\Reagento\Api\InfoInterface" method="getInfo"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/url" method="GET">
        <service class="Hatimeria\Reagento\Api\UrlInterface" method="getUrl"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/categories/homepage" method="GET">
        <service class="Hatimeria\Reagento\Api\HomeCategoriesInterface" method="getHomepageList"/>
        <resources>
            <resource ref="Magento_Catalog::categories"/>
        </resources>
    </route>
    <route url="/V1/categories/:categoryId/breadcrumbs" method="GET">
        <service class="Hatimeria\Reagento\Api\CategoryBreadcrumbsInterface" method="getList"/>
        <resources>
            <resource ref="Magento_Catalog::categories" />
        </resources>
    </route>
    <route url="/V1/categories" method="GET">
        <service class="Hatimeria\Reagento\Api\CategoryManagementInterface" method="getTree" />
        <resources>
            <resource ref="Magento_Catalog::categories" />
        </resources>
    </route>
    <route url="/V1/guest-carts/:cartId/paypal-fetch-token" method="GET">
        <service class="Hatimeria\Reagento\Api\Payment\PaypalInterface" method="getToken"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/contact" method="POST">
        <service class="Hatimeria\Reagento\Api\ContactFormInterface" method="send"/>
        <resources>
            <resource ref="Magento_Contact::contact" />
        </resources>
    </route>
</routes>
