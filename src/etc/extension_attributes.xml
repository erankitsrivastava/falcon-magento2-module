<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Bundle\Api\Data\LinkInterface">
        <attribute code="name" type="string" />
        <attribute code="catalog_display_price" type="string" />
    </extension_attributes>
    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="thumbnail_resized_url" type="string" />
        <attribute code="thumbnail_url" type="string" />
        <attribute code="media_gallery_sizes" type="Hatimeria\Reagento\Api\Data\GalleryMediaEntrySizeInterface[]" />
        <attribute code="catalog_display_price" type="float" />
        <attribute code="min_price" type="float" />
        <attribute code="max_price" type="float" />
        <attribute code="breadcrumbs" type="Hatimeria\Reagento\Api\Data\BreadcrumbInterface[]" />
    </extension_attributes>
    <extension_attributes for="Magento\Quote\Api\Data\TotalsItemInterface">
        <attribute code="thumbnail_url" type="string" />
        <attribute code="url_key" type="string" />
        <attribute code="available_qty" type="string" />
    </extension_attributes>
    <extension_attributes for="Magento\Catalog\Api\Data\CategoryInterface">
        <attribute code="breadcrumbs" type="Hatimeria\Reagento\Api\Data\BreadcrumbInterface[]"/>
    </extension_attributes>
    <extension_attributes for="Magento\Store\Api\Data\StoreConfigInterface">
        <attribute code="optional_post_codes" type="mixed" />
    </extension_attributes>
    <extension_attributes for="Magento\Store\Api\Data\StoreInterface">
        <attribute code="is_active" type="int" />
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="masked_id" type="string" />
    </extension_attributes>
</config>
